<div class="row">
  <div class="span12">
    <legend>Search stock</legend>  
    <%= form_tag(stocks_search_path, :method => "get", :class => "form-inline") do %>
      <%= text_field_tag(:query_stock, nil, :class => "input-xlarge", :placholder => "Search stock...") %>
      <button type="submit" class="btn btn-primary hidden-phone">
        <i class="icon-search icon-white"></i> Search
      </button>
    <% end %>
  </div>
  <div class="span12">
    <legend>Stock list</legend>
    <table class="table table-striped table-bordered responsive-table">
      <thead>
        <tr>
          <th>Ticker</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
      <% @stocks.each do |stock| %>
        <tr>
          <td data-title="Ticker"><%= stock.ticker %></td>
          <td data-title="Name"><%= link_to stock.name, stock %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

